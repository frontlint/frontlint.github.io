{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.js",
    "eslint.config.ts",
    ".stylelintrc.js",
    "commitlint.config.ts",
    "docs/**/*.ts",
    "docs/.vitepress/**/*.ts",
    "packages/eslint/src/index.js"
  ]
}
